{
  "name": "three-tribes-chronicle",
  "version": "0.1.0",
  "description": "A text-driven RPG with tribal simulation elements",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "watch": "tsc --watch",
    "web": "npm run build && npm start",
    "seed": "npm run build && node dist/scripts/seed-database.js",
    "check-db": "./scripts/check-db.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build"
  },
  "keywords": [
    "rpg",
    "game",
    "text-based"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/readline-sync": "^1.4.8",
    "typescript": "^5.3.3"
  }
}
